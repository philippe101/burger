
<div class="container text-center">

{{!-- <div id="burger-display"> --}}

	<div class="row">

		<div class="col-md-12 text-center">

			<img src="/assets/img/burger.png" width="800" height="800"/>

		</div>
	</div>

	<div class="row">

		<div class="col-md-12 text-center">

			<h1>Eat-Da-Burger!</h1>

		</div>
	</div>

	<div class="row">

		<div class="col-md-6 text-center">

		<h2>Tasty Burgers</h2>

		<ol>
			{{#each burgers}}
			 	{{#unless this.devoured}}
			 		<li>
			 		<h3>
			 		{{this.burger_name}}

			 		<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
			 		<input type="hidden" name="devoured" value="true">
			 		<button type="submit" class="btn btn-primary">Devour it!</button>
			 		</form>

					</h3>
			 		</li>
			 	{{/unless}}
		 	{{/each}}
		 </ol>
	</div>

	{{!-- <img id="pic" src="https://img00.deviantart.net/5eb0/i/2011/231/e/5/burger_png_by_dbszabo1-d473bva.png" --}}

	<div class="col-md-6 text-center">

		<h2>Devoured Burgers</h2>

		<ol>
			{{#each burgers}}
			 	{{#if this.devoured}}
			  		<li>
			  		<h3>{{this.burger_name}}</h3>

			  		{{!-- {{> burgers/delete-burgers}} --}}

			  	<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
			 		<input type="hidden" name="devoured" value="false">
			 		<button type="submit" class="btn btn-primary">Gone!</button>
			 	</form>

			  		</li>
			  	{{/if}}
			 {{/each}}
		</ol>
	</div>
</div>


<div class="row">

	<div class="col-md-12 text-center">

		<h1>Add a Burger</h1>

		<form class="create-update-form" action="burgers/create" method="POST">

		<div class="form-group">
			<label for="burger">Burger Name:</label>
			<input type="text" id="burger" name="name">
		</div>

		<button type="submit" class="btn btn-primary">Add Burger</button>
	</form>
</div>
</div>

</div>

























